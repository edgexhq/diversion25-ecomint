generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TreePlantingOrg {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String  @unique
  govId        String  @unique
  address      String
  image        String?
  wallet       String  @unique
  plantingArea String
  Tree         Tree[]
}

model Tree {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  species               String
  latitude              String
  longitude             String
  plantedAt             DateTime
  treePlantingOrgId     String   @db.ObjectId
  treePlantingOrgWallet String
  carbonOffset          Float
  userWalletAddress     String
  imgUrl                String

  transaction     Transactions    @relation(fields: [transactionId], references: [id])
  transactionId   String          @unique @db.ObjectId
  TreePlantingOrg TreePlantingOrg @relation(fields: [treePlantingOrgId], references: [id])
}

model Transactions {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  amount             String
  name               String
  email              String
  date               DateTime @default(now())
  transactionAddress String
  userWalletAddress  String
  status             Status   @default(PENDING)
  orgId              String   @db.ObjectId

  tree Tree?
}

enum Status {
  PENDING
  PLANTED
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  wallet        String   @unique
  email         String   @unique
  amountDonated String
  rewards       String[]
}
